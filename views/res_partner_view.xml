<odoo>
    <record id="view_partner_form_residuos" model="ir.ui.view">
        <field name="name">res.partner.form.residuos</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='misc']" position="inside">
                <field name="residuos_autorizados_ids" widget="many2many_tags" placeholder="Selecciona los residuos autorizados..."/>
            </xpath>
        </field>
    </record>
</odoo>
